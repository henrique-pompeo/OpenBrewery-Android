<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/brewerylist_nav"
    app:startDestination="@id/breweryListFragment">

    <fragment
        android:id="@+id/breweryListFragment"
        android:name="com.henrique.brewerylist.ui.BreweryListFragment"
        android:label="Brewery List"
        tools:layout="@layout/brewery_list_fragment">
        <action
            android:id="@+id/action_breweryListFragment_to_breweryDetailFragment"
            app:destination="@id/breweryDetailFragmentMain" />
    </fragment>

    <fragment
        android:id="@+id/breweryDetailFragmentMain"
        android:name="com.henrique.brewerydetail.ui.BreweryDetailFragment"
        android:label="Brewery Details"
        tools:layout="@layout/brewery_detail_fragment">
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>

</navigation>