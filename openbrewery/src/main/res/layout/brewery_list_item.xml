<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="15dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/breweryListItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Brewery Name" />

        <TextView
            android:id="@+id/breweryListItemType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:textColor="@color/primary_blue"
            app:layout_constraintStart_toEndOf="@id/breweryListItemTitle"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Brewery Name" />

        <TextView
            android:id="@+id/breweryListItemAddressLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".5"
            android:text="@string/address_label"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/breweryListItemTitle"
            tools:text="Address:"/>

        <TextView
            android:id="@+id/breweryListItemPhoneLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".5"
            android:text="@string/phone_label"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/breweryListItemAddress"
            tools:text="Phone:"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/breweryListItemGuideline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5" />

        <TextView
            android:id="@+id/breweryListItemAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".5"
            app:layout_constraintStart_toEndOf="@id/breweryListItemGuideline"
            app:layout_constraintTop_toBottomOf="@id/breweryListItemTitle"
            tools:text="3301 Madison Rd, address_2, address_3, null, Cincinnati, Ohio, null, 45209-1132, United States"/>

        <TextView
            android:id="@+id/breweryListItemPhone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintWidth_percent=".5"
            app:layout_constraintStart_toEndOf="@id/breweryListItemGuideline"
            app:layout_constraintTop_toBottomOf="@id/breweryListItemAddress"
            tools:text="+1 999 9999999"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>