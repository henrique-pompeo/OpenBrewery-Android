<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/brewerylist_navigation"
    app:startDestination="@id/breweryListFragment">

    <fragment
        android:id="@+id/breweryListFragment"
        android:name="com.henrique.openbrewery.brewerylist.presentation.fragment.BreweryListFragment"
        android:label="BreweryListFragment"
        tools:layout="@layout/brewery_list_fragment" >
        <action
            android:id="@+id/action_breweryListFragment_to_breweryDetailFragment"
            app:destination="@id/breweryDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/breweryDetailFragment"
        android:name="com.henrique.openbrewery.presentation.brewerydetail.fragment.BreweryDetailFragment"
        android:label="BreweryDetailFragment"
        tools:layout="@layout/brewery_detail_fragment" >
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>

</navigation>